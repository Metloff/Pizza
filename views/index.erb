<h2>Welcome to Pizza Shop</h2>



<div class="row">
	<% @product.each do |p|%>
	 <div class="col-md-3">
	 	<div class="row">
	 		<div>
	 			<%=p.title%>
	 		</div>
	 		
	 		<div>
	 			<img src="<%=p.path_to_image%>" />
	 		</div>

	 		<div>
	 			<%=p.description%>
	 		</div>

	 		<div>
	 			Size: <%=p.size%> cm
	 		</div>

	 		<div>
	 			Price: <%=p.price%> rub
	 		</div>

	 		<div>
	 			<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Add to cart</button>
	 		</div>

	 	</div>
	 </div> 
	<% end %>
</div>

<br/>

<button class="btn btn-primary" onclick="cart_get_number_of_items()">Click me!</button>

