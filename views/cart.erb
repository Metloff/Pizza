
<h3>Список заказов:</h3>

<div id="cart">

  <br />
  <table class="table table-striped">
    <thead>
    	<tr>
    		<th>#</th>
    		<th>Название</th>
        <th>Цена (1 шт.)</th>
    		<th>Количество</th>
    	</tr>
    </thead>

    <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <%i = 0 %>
      <% @items.each do |item|%>

      <% i = i + 1%>
      <tr>
          <th><%=i%></th>
          <th><%=item[0].title%></th>
          <th><%=item[0].price%></th>
          <th><%=item[1]%></th>
      </tr>
      <% total_price += item[0].price * item[1].to_i %>
      <% total_qty += item[1].to_i %>
      <%end%>

      <tr>
          <th></th>
          <th></th>
          <th>Total: <%=total_price %> Rub.</th>
          <th><%=total_qty%></th>
          
      </tr>
    </tbody>
  </table>

  <form action="/place_order" method="POST" role="form">

  <input name="order[orders_input]" type="hidden" value="<%= @orders_input%>">

   <div class="form-group">
      <label>Имя:</label>
      <input name="order[name]" type="text" class="form-control" placeholder="Ваше имя" >
    </div>

    <div class="form-group">
      <label>Телефон:</label>
      <input name="order[phone]" type="text" class="form-control" placeholder="Ваш телефон" >
    </div>

      <div class="form-group">
      <label>Адресс:</label>
      <textarea name="order[address]" type="text" class="form-control" placeholder="Ваш адресс" ></textarea>
    </div>

     <button type="submit" class="btn btn-success btn-lg">Отправить заказ</button>
     <button class="btn btn-primary btn-danger btn-lg" onclick="return cancel_order()">Очистить корзину</button>
  </form>

</div>

