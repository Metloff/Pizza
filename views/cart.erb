<h3>Список заказов:</h3>

<br />
<table class="table table-striped">
  <thead>
  	<tr>
  		<th>#</th>
  		<th>Название</th>
      <th>Цена (1 шт.)</th>
  		<th>Количество</th>
  	</tr>
  </thead>

  <tbody>
  <%i = 0 %>
    <% @items.each do |item|%>

    <% i = i + 1%>
    <tr>
        <th><%=i%></th>
        <th><%=item[0].title%></th>
        <th><%=item[0].price%></th>
        <th><%=item[1]%></th>
    </tr>
    <%end%>
  </tbody>
</table>